vowels = "aeiouAEIOU"  # Define all vowel characters (lowercase and uppercase)
text = "Hello Python"  # The text to analyze
count = 0              # Initialize vowel counter

for char in text:      # Examine each character in the text
    if char in vowels: # Check if character is a vowel
        count += 1     # If yes, increment counter

print(f"Vowel count: {count}")  # Print result (output: 4)




text = "Hello beautiful pepole"
vowels = "aeiouAEIOU"

vowel_count = len(list(filter(lambda char: char in vowels, text)))

print(f"Number of vowel is: {vowel_count}")
